{
  "include": ["./src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["esnext"],
    "target": "es6",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noUnusedParameters": true
  }
}
